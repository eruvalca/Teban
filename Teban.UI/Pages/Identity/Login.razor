@page "/user/login"

<div class="row">
    <div class="col-12">
        <h3>Login</h3>
    </div>
</div>

@if (ShowError)
{
    <div class="row">
        <div class="col-12">
            <ul class="error-list">
                @foreach (var message in ErrorMessages)
                {
                    <li class=validation-message>@message</li>
                }
            </ul>
        </div>
    </div>
}

<EditForm Model="LoginRequest" OnValidSubmit="HandleSubmit">
    <div class="row">
        <div class="col-12">
            <p>Don't have an account? <a href="/user/register">Register</a> now to get started.</p>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="form-group">
                <label class="form-label">Email</label>
                <InputText type="text" class="form-control" @bind-Value="LoginRequest.Email" />
            </div>

            <div class="form-group">
                <label class="form-label">Password</label>
                <InputText type="password" class="form-control" @bind-Value="LoginRequest.Password" />
            </div>

            <div class="form-group text-end">
                <button type="reset" class="btn btn-secondary" @onclick='() => Navigation.NavigateTo("/")'>Cancel</button>

                @if (DisableSubmit)
                {
                    <button type="button" class="btn btn-success" disabled>
                        <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                        Logging in...
                    </button>
                }
                else
                {
                    <button type="submit" class="btn btn-success">Login</button>
                }
            </div>
        </div>
    </div>
</EditForm>