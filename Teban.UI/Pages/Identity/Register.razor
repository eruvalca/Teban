@page "/user/register"

<div class="row">
    <div class="col-12">
        <h3>Register</h3>
    </div>
</div>

@if (ShowError)
{
    <div class="row">
        <div class="col-12">
            <ul class="error-list">
                @foreach (var message in ErrorMessages)
                {
                    <li class=validation-message>@message</li>
                }
            </ul>
        </div>
    </div>
}

<EditForm Model="RegisterRequest" OnValidSubmit="HandleSubmit">
    <div class="row">
        <div class="col-12">
            <div class="form-group">
                <label class="form-label">Email</label>
                <InputText class="form-control" @bind-Value="RegisterRequest.Email" />
            </div>

            <div class="form-group">
                <label class="form-label">Password</label>
                <InputText type="password" class="form-control" @bind-Value="RegisterRequest.Password" />
            </div>

            <div class="form-group">
                <label class="form-label">Confirm Password</label>
                <InputText type="password" class="form-control" @bind-Value="RegisterRequest.ConfirmPassword" />
            </div>

            <div class="form-group">
                <label class="form-label">First Name</label>
                <InputText class="form-control" @bind-Value="RegisterRequest.FirstName" />
            </div>

            <div class="form-group">
                <label class="form-label">Last Name</label>
                <InputText class="form-control" @bind-Value="RegisterRequest.LastName" />
            </div>

            <div class="form-group text-end">
                <button type="reset" class="btn btn-secondary" @onclick='() => Navigation.NavigateTo("/")'>Cancel</button>

                @if (DisableSubmit)
                {
                    <button type="button" class="btn btn-success ms-1" disabled>
                        <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                        Registering...
                    </button>
                }
                else
                {
                    <button type="submit" class="btn btn-success ms-1">Register</button>
                }
            </div>
        </div>
    </div>
</EditForm>