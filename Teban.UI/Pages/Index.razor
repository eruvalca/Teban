@page "/"

<PageTitle>Teban</PageTitle>

<AuthorizeView>
    <Authorized>
        <h1>Today <small class="text-muted">@Today.ToLongDateString()</small></h1>
        @if (BirthDayContacts != null)
        {
            <h3>Birthdays</h3>
            <ul>
                @foreach (var bDayContact in BirthDayContacts)
                {
                    <li>@bDayContact.FirstName</li>
                }
            </ul>
        }
        else
        {
            <div class="text-center">
                <LoadingSpinner />
            </div>
        }

        @if (ScheduledContacts != null)
        {
            <h3>Scheduled</h3>
            <ul>
                @foreach (var scheduledContact in ScheduledContacts)
                {
                    <li>@scheduledContact.FirstName</li>
                }
            </ul>
        }
        else
        {
            <div class="text-center">
                <LoadingSpinner />
            </div>
        }
    </Authorized>
    <NotAuthorized>
        <div class="row">
            <div class="col-12 text-center">
                <h3 class="page-header">Welcome to TimeKeepr</h3>
                <p>Log in or Register to get started</p>
            </div>
        </div>

        <div class="row">
            <div class="col-6 text-end">
                <a href="/user/login">Log In</a>
            </div>
            <div class="col-6 text-start">
                <a href="/user/register">Register</a>
            </div>
        </div>
    </NotAuthorized>
</AuthorizeView>